  <%= form.text_field :name , placeholder: "Name" %><br><br>
  <%= form.label :email, "Enter user email below" %><br>
  <%= form.email_field :email , placeholder: "Email" %><br><br>
  <%= form.label :password, "Enter user password below" %><br>
  <%= form.password_field :password, placeholder: "password" %><br><br><br>
  <%= form.submit "Submit" %>
<% end %>

